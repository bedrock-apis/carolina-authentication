{
   "compilerOptions": {
      "target": "ESNext",
      "experimentalDecorators": true,
      "module": "ESNext",
      "moduleResolution": "bundler",
      "noEmit": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "isolatedDeclarations": true,
      "declaration": true,
   },
   "include": [
    "src/**/*.ts"
   ]
}